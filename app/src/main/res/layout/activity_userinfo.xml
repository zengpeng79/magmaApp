<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:Android="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/phone_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <!--分隔空间-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_main" />

            <!--页面标题“登录”-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/app_main"
                android:text="@string/account"
                android:textColor="@color/tv_White"
                android:textSize="20sp"
                />

            <!--分隔空间-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_main" />

            <!--大灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_Gray" />

            <!--分隔空间-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_White"/>

            <!--圆形头像-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_White">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView

                    android:text="@string/photo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/tv_Black"/>

                <magma.com.anshan.util.CircleImageView

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="right"
                            android:src="@mipmap/hugh"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/bg_White"
                            />

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <!--分隔空间-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_White"/>

            <!--小分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <!--手机号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bg_White"
                    android:text="手机"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/bg_White"
                    android:text="18518716226"
                    android:padding="15dp"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <!--小分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <!--微信-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bg_White"
                    android:text="微信"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/bg_White"
                    android:text="18518716226"
                    android:padding="15dp"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <!--小分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <!--QQ号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bg_White"
                    android:text="QQ号码"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/bg_White"
                    android:text="1859586108234"
                    android:padding="15dp"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

            </LinearLayout>




            <!--小分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <!--登录密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bg_White"
                    android:text="登录密码"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/bg_White"
                    android:text="123456"
                    android:padding="15dp"
                    android:textColor="@color/tv_Black"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <!--大灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_Gray" />


            <!--退出登录-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!-- Login progress -->
                <ProgressBar
                    android:id="@+id/login_progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"/>

                <!--退出登录按钮-->
                <Button
                    android:id="@+id/logoutBT"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:background="@color/bg_White"
                    android:textColor="@color/tv_Red"
                    android:textSize="20sp"/>



            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>